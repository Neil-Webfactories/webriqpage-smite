@import '_settings'

normalize-css()
base()

body
  padding: 0px
  font-family: $lato

.btn.btn-default
  border:1px solid #666
  background-color: transparent

#mainNav.navbar-default
  background-color:transparent
  border:none

#mainNav.navbar-default.navbar-shrink .gn-menu-main, 
#mainNav.navbar-default.navbar-shrink .gn-menu-wrapper,
#mainNav.navbar-default.navbar-shrink .gn-menu-main ul
  background-color: #2a2a2a

.gn-menu-wrapper .gn-menu .social-media
  display:none

#service, #features
  background-color: #212121
  color: #fff

#last 
  color: #fff
  background-image: url(../img/bg-image-2.jpg)
  padding-bottom:0px

#last::after 
  content: ""
  position: absolute
  top: 0
  left: 0
  z-index: -1
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.7)

.contact-form
  margin-bottom:20px

.contact-form > div .form-control
  border-radius:0px
  padding:20px 10px
  outline:none
  border:1px solid #222

.contact-form > div .form-control:focus
  box-shadow:none !important


.modal-content .modal-body h4
  margin-left:0px;


@media (max-width:480px)
  .gn-menu-wrapper.gn-open-all .gn-menu
     border:none

  .gn-menu-wrapper.gn-open-all .gn-menu .social-media
    display: block
    padding-top:1em

  .gn-menu-wrapper.gn-open-all .gn-menu .social-media .company-social
    padding-left:20px

  .gn-menu-wrapper.gn-open-all .gn-menu .social-media .company-social li
    border:none
    margin:2px !important

  .gn-menu-main > li:last-child
    float:left

  .gn-menu-main > li > ul.company-social
    display:none;



